{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "preserve",
    "moduleResolution": "bundler",
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "types": ["vitest/globals"]
  },
  "include": ["src"]
}
